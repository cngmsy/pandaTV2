<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorHuise"
    android:orientation="horizontal">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="210px"
        android:layout_marginBottom="5px"
        android:layout_marginLeft="15px"
        android:layout_marginRight="15px"
        android:layout_marginTop="5px"
        android:background="@color/colorWhite">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="300px"
            android:layout_height="180px"
            android:layout_margin="15px">

            <ImageView
                android:id="@+id/video_item_iv"
                android:layout_width="300px"
                android:layout_height="180px"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40px"
                android:layout_alignParentBottom="true"
                android:background="@drawable/lpanda_bottom_gra">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="40px"
                    android:layout_marginLeft="5px"
                    android:src="@drawable/play" />

                <TextView
                    android:layout_gravity="center"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/video_item_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15px"
                    android:textSize="20px" />
            </LinearLayout>
        </com.zhy.autolayout.AutoRelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160px"
            android:layout_marginTop="20px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/video_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:text="wakwkaksaks"
                android:textSize="25px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/video_item_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15px"
                android:text="qwerty"
                android:textSize="23px" />
        </LinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoRelativeLayout>