<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:padding="15px"
    android:background="#fff"
    android:layout_height="match_parent">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="0dp"
        android:layout_height="180px"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/item_shoye_recycler5_listviewitme_image"
            android:layout_width="match_parent"
            android:layout_height="180px"
            android:layout_weight="1"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/item_shoye_recycler5_listviewitme_playlength"
            android:layout_width="wrap_content"
            android:layout_height="50px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:textColor="#fff"
            android:background="@drawable/lpanda_bottom_gra"
            android:text="TextView" />

        <ImageView
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_margin="15px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            app:srcCompat="@drawable/play" />

    </com.zhy.autolayout.AutoRelativeLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="180px"
        android:layout_weight="2"

        android:orientation="vertical">

        <TextView
            android:id="@+id/item_shoye_recycler5_listviewitme_text"
            android:layout_width="wrap_content"
            android:text="sssss"
            android:textSize="11sp"
           android:layout_gravity="bottom"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="bottom"
            android:layout_weight="1">
            <TextView
                android:id="@+id/item_shoye_recycler5_listviewitme_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:layout_marginTop="14px"
                android:text="asdasda"
                android:textColor="#b6b6b6"
                android:textSize="8sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>