<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
   android:background="#fff"
    android:layout_height="wrap_content">
    <LinearLayout
        android:background="#e9e9e9"
        android:layout_width="match_parent"
        android:layout_height="10px"></LinearLayout>
    <com.youth.banner.Banner
        android:id="@+id/shouye_bannerviewpager"
        android:layout_width="match_parent"
        android:layout_height="400px"></com.youth.banner.Banner>

    <TextView
        android:id="@+id/shouye_bannerviewpager_title"
        android:layout_marginLeft="24px"
        android:textSize="17sp"
        android:layout_alignBottom="@+id/shouye_bannerviewpager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</com.zhy.autolayout.AutoRelativeLayout>