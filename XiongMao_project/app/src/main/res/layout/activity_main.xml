<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/iconImg"
            android:layout_width="wrap_content"
            android:layout_height="110px"
            android:src="@drawable/panda_sign"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10px"/>
        <ImageView
            android:id="@+id/personImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/person_sign"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:id="@+id/titleTv"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            />
        <ImageView
            android:id="@+id/hudongImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hudong_sign"
            android:layout_marginRight="15px"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/personImg"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/titleTv"
            android:layout_centerHorizontal="true"
            android:textColor="#fff"
            android:textSize="15sp"
            android:text="xxxxx" />

    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoFrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_weight="1"></com.zhy.autolayout.AutoFrameLayout>

    <RadioGroup
        android:id="@+id/homeBottomGroup"
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:padding="10px"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/homePage"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:button="@null"
            android:drawablePadding="5px"
            android:drawableTop="@drawable/tab_home_normal"
            android:gravity="center"
            android:checked="true"
            android:text="首页"
            android:textSize="12sp"/>

        <RadioButton
            android:id="@+id/homePandaLive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="5px"
            android:drawableTop="@drawable/tab_panda_live_normal"
            android:gravity="center"
            android:text="熊猫直播"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/homeRollVideo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="5px"
            android:drawableTop="@drawable/tab_panda_culture_normals"
            android:gravity="center"
            android:text="滚滚视频"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/homePandaBroadcast"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:button="@null"
            android:gravity="center"
            android:drawableTop="@drawable/tab_panda_eye_normal"
            android:text="熊猫播报"
            android:drawablePadding="5px"
            android:textSize="12sp"/>

        <RadioButton
            android:id="@+id/homeLiveChina"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/tab_live_china_normal"
            android:button="@null"
            android:gravity="center"
            android:text="直播中国"
            android:drawablePadding="5px"
            android:textSize="12sp"
            />
    </RadioGroup>

</com.zhy.autolayout.AutoLinearLayout>
